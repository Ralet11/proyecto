html
  head
    script(src="https://unpkg.com/sweetalert/dist/sweetalert.min.js")
    

    style.
      body {
        background: linear-gradient(45deg, #171738, #1A2342, #1B2A4F);
      }
      h1 {
        font-size: 24px;
        margin-bottom: 10px;
      }
      ul {
        list-style-type: none;
        padding: 0;
        display: flex;
        flex-wrap: wrap;
      }
      li {
        width: calc(33.33% - 20px);
        margin: 10px;
      }
      .product-card {
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 5px;
      }
      .product-image {
        width: 100px;
        height: 100px;
        object-fit: cover;
        margin-bottom: 10px;
      }
      .nav {
        display: flex;
        justify-content: flex-end;
        align-items: center;
        padding: 10px;
        background-color: #f1f1f1;
      }
      .cart-button {
        background-color: #4caf50;
        color: white;
        padding: 10px 20px 10px 10px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
      }
      .cart-button:hover {
        background-color: #45a049;
      }
      .chat-button {
        background-color: #109DFA;
        color: white;
        padding: 10px 20px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        margin-left: 10px;
        margin-right: 10px
      }
      .chat-button:hover {
        background-color: #109DDA;
      }
      .product-card {
        /* Estilos de tus tarjetas de producto */
      }
      form#cart-form-container {
        display: none;
        position: fixed;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        background: #fff;
        padding: 30px;
        border: 2px solid #ccc;
        border-radius: 10px;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.2);
        z-index: 9999;
        width: 400px;
      }
      form#cart-form-container h2 {
        margin-top: 0;
        font-size: 20px;
      }
      form#cart-form-container label {
        display: block;
        margin-top: 15px;
      }
      form#cart-form-container input {
        width: 100%;
        padding: 8px;
      }
      form#cart-form-container button {
        background: #4caf50;
        color: #fff;
        padding: 10px 20px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        margin-top: 20px;
      }
      form#cart-form-container button:hover {
        background: #45a049;
      }

      
  body
    div.nav
      button.cart-button(onclick="goToCart()") Ir al carrito
      button.chat-button(onclick="openChat()") Chatea con nosotros
    h1 Product Names
    ul
      each product in products
        li
          .product-card
            p.product-name #{product.name}
            img.product-image(src=`/imagenes/${product.id}.jpg`, alt=product.name)
            p.product-price #{product.price}
            p.product-category #{product.category}
            button.add-to-cart-btn(onclick=`addToCart('${product.id}')`) Add to Cart
    
    form#cart-form-container(style="display: none;")
      button#close-btn(style="position: absolute; top: 10px; right: 10px; background: none; border: none; font-size: 18px; cursor: pointer; color: red") X
      h2 Danos más detalles para iniciar tu compra
      label(for="address") Dirección de entrega:
      input#address(type="text", required)
      button#submit-btn(type="submit") Agrega al Carrito




    script.

      const user = !{JSON.stringify(_user)}

      function openChat() {
        window.location.href = "/api/chat";
      }
       
      function goToCart() {
          window.location.href = "/api/carrito";
      }
      function addToCart(productId) {
        fetch('/api/carrito/actual')
          .then(response => response.json())
          .then(data => {
            if (data) {
              sendAddToCartRequest(productId); // Llamar a la función para agregar el producto al carrito existente
            } else {
              showCartForm(productId);;
            }
          })
          .catch(error => console.log(error));
      }


      function showCartForm(productId) {
        const closeBtn = document.getElementById('close-btn');
        closeBtn.addEventListener('click', () => {
          formContainer.style.display = 'none';
        });

        const formContainer = document.getElementById('cart-form-container');
        formContainer.style.display = 'block';

        formContainer.addEventListener('submit', (event) => {
          event.preventDefault();
          const addressInput = document.getElementById('address');
          const address = addressInput.value;
          sendAddToCartRequest(productId, address);
          formContainer.style.display = 'none';
        });
      }




              

      function sendAddToCartRequest(productId, address) {
        console.log(user.email)
        const payload = {
          productId,
          email: user.email,
          deliveryAddress: address,
          dateTime: new Date().toISOString()  // Agregar el parámetro dateTime con la fecha y hora actual
        };

        fetch('/api/carrito', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json'
          },
          body: JSON.stringify(payload)
        })
          .then(response => response.json())
          .then(data => {
            console.log(data);
            // Aquí puedes realizar acciones adicionales después de agregar el producto al carrito
            swal({
              title: "Excelente!",
              text: "Agregaste un producto al carrito!",
              icon: "success",
              button: "Okey",
            });
          })
          .catch(error => console.log(error));
      }